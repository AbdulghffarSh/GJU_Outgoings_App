<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <EditText
        android:id="@+id/postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/borders"
        android:fontFamily="@font/ubuntu_bold"
        android:hint="Post Title"
        android:padding="15dp" />

    <EditText
        android:id="@+id/postBody"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borders"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="top|start"
        android:hint="Post"
        android:padding="10dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/loadingLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/attachImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_upload_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/attachImage"
            android:layout_toEndOf="@+id/attachImage"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingHorizontal="10dp"
            android:text="(Optional)" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accommodationsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Accommodations"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eventsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Events"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vacanciesTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Vacancies"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/visaTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Visa"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/moneyAndBanksTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Money &amp; Banks"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lookingForHelpTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Looking for help"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/otherTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector"
                android:fontFamily="@font/ubuntu_bold"
                android:paddingHorizontal="5dp"
                android:text="Other"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/borders"
        android:backgroundTint="#F2A832"
        android:fontFamily="@font/ubuntu_bold"
        android:paddingHorizontal="50dp"
        android:text="Post"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>